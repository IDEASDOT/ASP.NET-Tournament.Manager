@model Web.Areas.Admin.ViewModels.ModelSerieIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModelSeries.FirstOrDefault().ModelSerieName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ModelSeries) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModelSerieName)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.ModelSerieId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.ModelSerieId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.ModelSerieId })
        </td>
    </tr>
}

</table>
