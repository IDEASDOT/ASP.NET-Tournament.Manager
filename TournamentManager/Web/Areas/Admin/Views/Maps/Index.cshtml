@model Web.Areas.Admin.ViewModels.MapIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Maps.FirstOrDefault().MapName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Maps) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MapName)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.MapId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.MapId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.MapId })
        </td>
    </tr>
}

</table>
