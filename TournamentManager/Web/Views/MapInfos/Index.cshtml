@model Web.ViewModels.MapInfoIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MapInfos.FirstOrDefault().Map.MapName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MapInfos.FirstOrDefault().Match.MatchId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MapInfos.FirstOrDefault().Match.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MapInfos.FirstOrDefault().FirstTeamScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MapInfos.FirstOrDefault().SecondTeamScore)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.MapInfos) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Map.MapName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Match.MatchId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Match.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstTeamScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondTeamScore)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.MapInfoId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.MapInfoId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.MapInfoId })
        </td>
    </tr>
}

</table>
