@model Web.ViewModels.PlayerIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().FavouriteMap.MapName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().Team.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().AllTimeWins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().CurrentWins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().AllTimeLost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.FirstOrDefault().CurrentLost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Players) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FavouriteMap.MapName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllTimeWins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentWins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllTimeLost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentLost)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.PlayerId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.PlayerId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.PlayerId })
        </td>
    </tr>
}

</table>
