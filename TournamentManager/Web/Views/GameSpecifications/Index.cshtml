@model Web.ViewModels.GameSpecificationIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameSpecifications.FirstOrDefault().Player.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameSpecifications.FirstOrDefault().DpiValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameSpecifications.FirstOrDefault().SensitivityValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameSpecifications.FirstOrDefault().GameWins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameSpecifications.FirstOrDefault().GameLost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.GameSpecifications) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Player.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DpiValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SensitivityValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameWins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameLost)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.GameSpecId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.GameSpecId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.GameSpecId })
        </td>
    </tr>
}

</table>
