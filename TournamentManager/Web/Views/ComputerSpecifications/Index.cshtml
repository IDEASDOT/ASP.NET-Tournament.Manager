@model Web.ViewModels.ComputerSpecificationIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ComputerSpecifications.FirstOrDefault().Player.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComputerSpecifications.FirstOrDefault().OsName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComputerSpecifications.FirstOrDefault().CompWins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComputerSpecifications.FirstOrDefault().CompLost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ComputerSpecifications) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Player.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OsName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompWins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompLost)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.CompSpecId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.CompSpecId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.CompSpecId })
        </td>
    </tr>
}

</table>
