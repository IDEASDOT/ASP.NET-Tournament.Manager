@model Web.ViewModels.MatchIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Inde</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().Time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Matches) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.MatchId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.MatchId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.MatchId })
        </td>
    </tr>
}

</table>
